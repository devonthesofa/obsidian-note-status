{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["./components/*"],
			"@/constants/*": ["./constants/*"],
			"@/contexts/*": ["./contexts/*"],
			"@/core/*": ["./core/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/integrations/*": ["./integrations/*"],
			"@/styles/*": ["./styles/*"],
			"@/types/*": ["./types/*"],
			"@/utils/*": ["./utils/*"],
			"@/views/*": ["./views/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
